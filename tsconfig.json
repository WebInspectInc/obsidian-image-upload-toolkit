  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "emitDeclarationOnly": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "types.d.ts"]
}
